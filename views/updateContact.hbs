<div class="container-fluid">
    <h1>Edit the contact details</h1>

    <form action="/contacts/edit-contact{{data.Name}}" method="post"> 
        <div class="form-group">
            <label for="Name">Name</label>
            <br/>
            <input value={{data.Name}} id="Name" name="contactName" placeholder="Enter Name">
        </div>

        <div class="form-group">
            <label for="Email">Email</label>
            <br/>
            <input value={{data.Email}} id="Email" name="contactEmail" placeholder="Enter Email">
        </div>

        <div class="form-group">
            <label for="Phone">Phone</label>
            <br/>
            <input value={{data.Phone}} id="Phone" name="contactPhone" placeholder="Enter Phone Number">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>