<div class="container-fluid">
    <h1>Enter the contact details</h1>

    <form action="/contacts/add" method="POST"> 
        <div class="form-group">
            <label for="Name">Name</label>
            <br/>
            <input id="Name" name="contactName" placeholder="Enter Name">
        </div>

        <div class="form-group">
            <label for="Email">Email</label>
            <br/>
            <input id="Email" name="contactEmail" placeholder="Enter Email">
        </div>

        <div class="form-group">
            <label for="Phone">Phone</label>
            <br/>
            <input id="Phone" name="contactPhone" placeholder="Enter Phone Number">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>